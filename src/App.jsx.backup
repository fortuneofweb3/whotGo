      if (totalXPNeeded + xpForThisLevel > xp) {
        break;
      }
      totalXPNeeded += xpForThisLevel;
      level++;
    }
    return {
      level: Math.min(level, 100),
      currentLevelXP: xp - totalXPNeeded,
      xpNeededForNext: level <= 100 ? 100 + level * 150 + Math.floor(level / 10) * 500 : 0,
